<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_change_password_1"
    >

    <TextView
        android:id="@+id/header"
        android:background="@drawable/bg_dialog_change_passoword"
        android:text="Chọn phương thức thanh toán"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="36dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_change_password_1">

        <LinearLayout
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/cod_payment_2"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_weight="8"
                android:padding="5dp"
                android:text="Thanh toán qua cổng thanh toán VNPAY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:checked="true"
                android:id="@+id/radioButton1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/vnpay_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_weight="8"
                android:padding="5dp"
                android:id="@+id/tvCountry"
                android:text="Thanh toán qua cổng thanh toán VNPAY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/paypal_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_weight="8"
            android:padding="5dp"
            android:text="Thanh toán qua cổng thanh toán PayPal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/btnCancle"
            android:background="@drawable/bg_button"
            android:text="Hủy"
            android:gravity="center"
            android:layout_width="150dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_height="50dp"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/btnUpdatePassword"
            android:background="@drawable/bg_button"
            android:text="Xác nhận"
            android:gravity="center"
            android:layout_width="150dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            />

    </LinearLayout>

</LinearLayout>