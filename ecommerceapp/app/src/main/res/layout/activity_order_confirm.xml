<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.OrderConfirm">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/order_confirmed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Order Confirmation"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Cảm ơn vì đã đặt hàng từ cửa hàng của chúng tôi."
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:gravity="center"
        android:text="Hãy kiểm tra email của bạn cho thông tin chi tiết về đơn hàng. Nếu có bất kỳ câu hỏi hay muốn biết thêm thông tin, hãy liên hệ với ban hỗ trợ khách hàng của chúng tôi."

        android:textSize="17sp" />

    <Button
        android:id="@+id/continueShopping"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/continue_shopping"
        android:inputType="text"
        android:text="Tiếp tục mua sắm"
        android:textColor="@color/colorPrimary" />

</LinearLayout>
